---
import { getEntry } from "astro:content";
import { Icon } from "astro-icon/components";
import Base from "../layouts/Base.astro";
import { modifieddate } from "../components/utilities/DateFormat.js";

const links = await getEntry("links", "links");
const { Content, remarkPluginFrontmatter } = await links.render();

let title = links.data.title;
let description = links.data.description;
---

<Base title={title} description={description}>
  <article>
    <h1>{title}</h1>
    <p class="now">{description}</p>
    <div class="time">
      <Icon name="bi:calendar2-week-fill" />
      <time datetime={links.data.date}>
        <a href={`/${links.slug}`}
          >Last updated {modifieddate(links.data.date)}</a
        >
      </time>
    </div>
    <div class="now">
      <Content />
    </div>
    <div class="pins">
      <a href="/pins/"><Icon name="ic:baseline-add-location" /></a>
    </div>
  </article>
</Base>

<style>
  h4 {
    font-style: italic;
  }
  div.time,
  div.time a {
    font-size: 0.8em;
  }
  div.time {
    margin-top: 2.5rem;
  }
  [data-icon="bi:calendar2-week-fill"] {
    font-size: 0.75rem;
    margin-bottom: -0.05rem;
  }
  div.pins {
    margin: 8rem auto 0;
    width: 100%;
    display: flex;
    justify-content: center;
  }
  [data-icon="ic:baseline-add-location"] {
    color: var(--accent1);
    font-size: 2.5rem;
  }
</style>
