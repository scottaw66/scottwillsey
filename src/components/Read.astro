---
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import { postdate } from "../components/utilities/DateFormat.js";
import CalendarFillIcon from "./icons/CalendarFillIcon.astro";

interface Props {
  read: CollectionEntry<"reads">;
}

const { read } = Astro.props;
const { Content } = await render(read);
---

<article>
  <header>
    <h1>
      <a href={`/reads/${read.id}`}>{read.data.title}</a>
    </h1>
    <div class="text-[0.8em] text-dates font-bold mb-6">
      <CalendarFillIcon size="1em" fill="var(--dates)" />
      <time datetime={read.data.date}>
        <a href={`/reads/${read.id}`} class="text-dates">
          {postdate(read.data.date)}
        </a>
      </time>
    </div>
  </header>
  <Content />
</article>
