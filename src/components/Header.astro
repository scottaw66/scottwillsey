---
import { Image } from "astro:assets";
import Menu from "./Menu.astro";
import av from "../assets/images/saw111.jpg";
---

<div class="header">
  <div class="header-left">
    <a href="/">
      <div class="title">
        <div>sc</div>
        <div class="title-image">
          <Image src={av} width={100} format={"webp"} alt="Scott avatar" />
        </div>
        <div>ttwillsey</div>
      </div>
    </a>
    <div class="header-nihongo">
      <span class="subtitle">新無料サイト!!</span>
    </div>
  </div>
  <div class="menu-header">
    <Menu />
  </div>
</div>

<style>
  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 1rem auto 2.5rem;
    color: var(--title);
    width: 100%;
  }

  .header-left {
    position: relative; /* Add this to contain the absolute positioned subtitle */
  }

  .header div.title {
    display: grid;
    justify-items: center;
    grid-template-columns: fit-content(33%) fit-content(33%) fit-content(33%);
    font-family: var(--font-title);
    font-size: clamp(2rem, 2vw + 1rem, 3.5rem);
    padding: 0;
    margin: 0;
    width: fit-content;
  }

  .header div.header-nihongo {
    position: absolute; /* Change to absolute */
    bottom: -1.25em; /* Adjust as needed */
    left: 2em; /* Adjust as needed */
    margin: 0;
    padding: 0;
  }
  .header div.header-nihongo .subtitle {
    transform: rotate(-5deg);
    display: inline-block;
    color: var(--text1);
  }

  .header a {
    color: var(--title);
    text-decoration: none;
    margin: 0;
    padding: 0;
  }

  .header a:hover {
    color: var(--title-hover);
  }

  .header div.title-image img {
    border-radius: 50%;
    border: 2px solid var(--brand);
    width: 0.55em;
    height: 0.55em;
    margin-bottom: -0.05em;
  }

  .header div.title-image img:hover {
    border-color: var(--title-hover);
    transform-origin: center;
    transform: scale(1.1);
  }

  .header div.menu-header {
    padding: 0;
    margin: 0 0 -0.5em 0;
  }

  @media only screen and (max-width: 835px) {
    .header {
      flex-direction: column;
      align-items: center;
      gap: 1em;
    }
    .header div.menu-header {
      margin: 0;
    }
  }
</style>
