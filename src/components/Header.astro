---
import { Image } from "astro:assets";
import Menu from "./Menu.astro";
import av from "../assets/images/saw111.jpg";
---

<div class="header">
  <a href="/">
    <div class="title">
      <div>sc</div>
      <div class="title-image">
        <Image src={av} width={100} format={"webp"} alt="Scott avatar" />
      </div>
      <div>ttwillsey</div>
    </div>
  </a>
  <div class="menu-header">
    <Menu />
  </div>
</div>

<style>
  .header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin: 1rem auto 2.5rem;
    color: var(--brand);
    width: 100%;
  }

  .header div.title {
    display: grid;
    justify-items: center;
    grid-template-columns: fit-content(33%) fit-content(33%) fit-content(33%);
    font-family: var(--font-title);
    font-size: clamp(2rem, 2vw + 1rem, 3.5rem);
    padding: 0;
    margin: 0 2em;
    width: fit-content;
  }

  .header a {
    color: var(--title);
    text-decoration: none;
    margin: 0;
    padding: 0;
  }

  .header a:hover {
    color: var(--brand);
  }

  .header div.title-image img {
    border-radius: 50%;
    border: 2px solid var(--hyperlink);
    width: 0.55em;
    height: 0.55em;
    margin-bottom: -0.06em;
  }

  .header div.title-image img:hover {
    border-color: var(--brand);
    transform-origin: center;
    transform: scale(1.1);
  }

  .header div.menu-header {
    padding: 0;
    margin: 0 4em -0.5em 0;
  }

  @media only screen and (max-width: 550px) {
    .header {
      flex-direction: column;
      align-items: center;
      gap: 1em;
    }
    .header div.menu-header {
      margin: 0;
    }
  }
</style>
